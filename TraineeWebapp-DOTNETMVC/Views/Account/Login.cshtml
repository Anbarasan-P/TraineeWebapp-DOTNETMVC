@model TraineeWebapp_DOTNETMVC.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 80vh;">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Login</h3>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.LabelFor(map => map.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(map => map.Email, new { @class = "form-control", placeholder = "Enter your email" })
                            @Html.ValidationMessageFor(map => map.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(map => map.Password, new { @class = "form-label" })
                            @Html.PasswordFor(map => map.Password, new { @class = "form-control", placeholder = "Enter your password" })
                            @Html.ValidationMessageFor(map => map.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(map => map.Role, new { @class = "form-label" })
                            @Html.DropDownListFor(map => map.Role,
                                new SelectList(new[]
                                {
                                    new { Value = "", Text = "-- Select Role --" },
                                    new { Value = "Admin", Text = "Admin" },
                                    new { Value = "Trainee", Text = "Trainee" }
                                }, "Value", "Text"),
                                new { @class = "form-select" })
                            @Html.ValidationMessageFor(map => map.Role, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    }

                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
