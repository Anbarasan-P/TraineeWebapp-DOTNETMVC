@model IEnumerable<TraineeWebapp_DOTNETMVC.Models.Trainee>

@{ 
    ViewBag.Title = "Trainee List";
}

<h2>Trainee List🧾</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Joining Date</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Department</td>
                    <td>@item.JoiningDate.ToShortDateString()</td>
                    <td>@item.Gender</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit",new {id = item.TraineeID})|
                        @Html.ActionLink("Details", "Details", new {id = item.TraineeID})|
                        @Html.ActionLink("Delete", "Delete", new {id = item.TraineeID})
                    </td>
                </tr>
            }
    </tbody>
</table>

