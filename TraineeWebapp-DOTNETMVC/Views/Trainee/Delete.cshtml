@model TraineeWebapp_DOTNETMVC.Models.Trainee

@{
    ViewBag.Title = "Delete Trainee";
}

<h2>Delete Trainee</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Department</dt>
        <dd>@Model.Department</dd>

        <dt>Joining Date</dt>
        <dd>@Model.JoiningDate.ToShortDateString()</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Trainee", FormMethod.Post))
     {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.TraineeID)
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
     }
</div>