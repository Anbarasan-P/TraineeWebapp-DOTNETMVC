@model TraineeWebapp_DOTNETMVC.Models.Trainee

@{
    ViewBag.Title = "Delete Trainee";
    string imgSrc = null;
    if (Model.Photo != null)
    {
        var base64 = Convert.ToBase64String(Model.Photo);
        imgSrc = $"data:image/png;base64,{base64}";
    }
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="row g-0 align-items-center">

                    <div class="col-md-4 bg-light text-center p-4">
                        @if (Model.Photo != null)
                        {
                            <img src="@imgSrc"
                                 class="rounded-circle border shadow-sm"
                                 style="width:110px;height:110px;object-fit:cover;"
                                 alt="Photo" />
                        }
                        else
                        {
                            <span class="text-muted">No photo</span>
                        }
                    </div>

                    <div class="col-md-8 p-4">
                        <h2 class="mb-3 text-center text-danger h4 fw-bold">Delete Trainee</h2>
                        <div class="alert alert-danger py-2 text-center fw-semibold">Are you sure you want to delete this?</div>
                        <div class="table-responsive mb-3">
                            <table class="table table-borderless mb-0 align-middle">
                                <tbody>
                                    <tr>
                                        <th class="text-secondary ps-0" style="width:120px;">Name</th>
                                        <td>@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <th class="text-secondary ps-0">Email</th>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        <th class="text-secondary ps-0">Department</th>
                                        <td>@Model.Department</td>
                                    </tr>
                                    <tr>
                                        <th class="text-secondary ps-0">Joining Date</th>
                                        <td>@Model.JoiningDate.ToShortDateString()</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex gap-3 justify-content-center mt-4">
                            @using (Html.BeginForm("Delete", "Trainee", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(map => map.TraineeID)
                                <button type="submit" class="btn btn-danger px-4 fw-semibold">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            }
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary px-4 fw-semibold" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

